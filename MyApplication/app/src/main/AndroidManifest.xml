<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="blake.com.gameofthronesmap" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/gotentry"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat" >
        <service android:name=".OtherFiles.SongService"/>
        <activity android:name=".Activities.InfoActivity"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".Activities.CharacterActivity"
            android:windowSoftInputMode="stateHidden"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".Activities.SearchResultsActivity"
            android:launchMode="singleTop"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            </activity>
        <activity android:name=".Activities.FavoritesListActivity"
            android:launchMode="singleTop"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".Activities.FavoriteCharacterActivity"
            android:windowSoftInputMode="stateHidden"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".Activities.ReviewActivity"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".Activities.MainActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
